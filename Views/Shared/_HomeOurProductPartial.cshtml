@model List<Product>
    <!-- our product area start -->
<section class="our-product section-padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title text-center">
                    <h2 class="title">Our Product</h2>
                    <p class="sub-title">Lorem ipsum dolor sit amet consectetur adipisicing</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="product-carousel-4 mbn-50 slick-row-15 slick-arrow-style">
                    @foreach (Product product in Model)
                    {
                        <!-- product single item start -->
                        <div class="product-item mb-50">
                            <div class="product-thumb">
                                <a asp-controller="product" asp-action="detail" asp-route-id="@product.Id">
                                    <img src="~/assets/img/product/@product.MainImage" alt="">
                                </a>
                            </div>
                            <div class="product-content">
                                <h5 class="product-name">
                                    <a asp-controller="product" asp-action="detail" asp-route-id="@product.Id">@product.Name</a>
                                </h5>
                                <div class="price-box">
                                    @if (product.DiscountedPrice > 0)
                                    {
                                        <span class="price-regular">$@product.DiscountedPrice</span>
                                        <span class="price-old"><del>$@product.Price</del></span>
                                    }
                                    else
                                    {
                                        <span class="price-old"><del>$@product.Price</del></span>
                                    }

                                </div>
                                <div class="product-action-link">
                                    <a href="#" data-toggle="tooltip" title="Wishlist"><i class="ion-android-favorite-outline"></i></a>
                                    <a asp-controller="basket" asp-action="addtobasket" asp-route-id="@product.Id" class="addtobasket" data-toggle="tooltip" title="Add To Cart"><i class="ion-bag"></i></a>
                                    <a asp-controller="home" asp-action="modalview" asp-route-id="@product.Id" data-toggle="modal" class="modaldetail" data-target="#quick_view">
                                        <span data-toggle="tooltip"
                                              title="Quick View"><i class="ion-ios-eye-outline"></i></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <!-- product single item start -->
                    }


                </div>
            </div>
        </div>
    </div>
</section>
<!-- our product area end -->